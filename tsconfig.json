{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "inlineSourceMap": false,
        "allowJs": true,
        "lib": [
            "es6",
            "es2015",
            "es2016"
        ],
        "declaration": true,
        "declarationDir": "typings",
        "types": [
            "@fibjs/types"
        ],
        "typeRoots": [
            "typings/index.d.ts"
        ]
    },
    "include": [
        "src/**/*",
        "src/util/is-builtin-module.ts"
    ],
    "exclude": [
        "src/**/*.js",
        "test/**/*"
    ]
}
